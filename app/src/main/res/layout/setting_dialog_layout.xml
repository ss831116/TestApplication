<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f000000"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit_dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/dialog_notice_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:background="@null"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="@color/dialog_text_color1"
            android:textSize="@dimen/edit_item_name_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="33dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/setting_bg" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="@dimen/edit_btn_width"
            android:layout_height="@dimen/edit_btn_height"
            android:background="@drawable/comment_text_btn_bg"
            android:textColor="@color/edit_btn_text_color"
            android:textSize="@dimen/edit_item_name_size" />

    </LinearLayout>
</RelativeLayout>