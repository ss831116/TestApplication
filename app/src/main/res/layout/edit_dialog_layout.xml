<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f000000"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit_dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_notice_text"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:gravity="center"
            android:textColor="@color/dialog_text_color1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/edit_item_name_size" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="@dimen/edit_btn_width"
            android:layout_height="@dimen/edit_btn_height"
            android:background="@color/edit_btn_bg"
            android:textSize="@dimen/edit_item_name_size"
            android:textColor="@color/edit_btn_text_color" />

    </LinearLayout>
</RelativeLayout>