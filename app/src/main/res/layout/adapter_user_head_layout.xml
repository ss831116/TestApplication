<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="122dp"
    android:background="@color/title_bg">

    <com.yuyu.android.wct.widget.CircleImageView
        android:id="@+id/user_head_icon"
        android:layout_width="@dimen/user_head_width"
        android:layout_height="@dimen/user_head_width"
        android:layout_margin="@dimen/margin_noraml"
        android:contentDescription="@null"
        android:src="@drawable/lotus" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/user_head_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_votes"
            style="@style/adapter_user_head_text_style"
            android:text="@string/user_votes" />

        <TextView
            android:id="@+id/user_points"
            style="@style/adapter_user_head_text_style"
            android:layout_marginTop="4dp"
            android:text="@string/user_points" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentBottom="true"
        android:background="@color/listview_divider_color" />
</RelativeLayout>