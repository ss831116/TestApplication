<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg">

    <LinearLayout
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/edit_dialog_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="40dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_play_action_normal" />

        <TextView
            android:id="@+id/upload_video_fail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/upload_fail_text"
            android:textColor="@color/dialog_text_color1"
            android:textSize="@dimen/dialog_text_size1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/delete_video_image"
                    android:layout_width="@dimen/video_btn_width"
                    android:layout_height="@dimen/video_btn_width"
                    android:src="@drawable/video_delete_btn"
                    android:contentDescription="@null"
                    />
                <TextView
                    android:id="@+id/failUploadDelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_video"
                    android:textColor="@color/dialog_text_color2"
                    android:textSize="@dimen/dialog_text_size2"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/reUpload_image"
                    android:layout_width="@dimen/video_btn_width"
                    android:layout_height="@dimen/video_btn_width"
                    android:src="@drawable/video_reupload_btn"
                    android:contentDescription="@null"
                    />
                <TextView
                    android:id="@+id/failUploadReUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reupload"
                    android:textColor="@color/dialog_text_color2"
                    android:textSize="@dimen/dialog_text_size2"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>